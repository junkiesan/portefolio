      <div class="card-body">
        <h4> <%= project.title %> </h4>
        <p> <%= project.description %> </p>
        <a href="<%= project.url %>" class="btn btn-primary">Aller sur le site</a>
      </div>
      <%#= image_tag("cog.svg") %>
    </div>
    <% end %>
  </div>
  <div class="bloc4">
    <p>Contactez-moi ❤️</p>
